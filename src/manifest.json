{
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "lattedock-thunderbird@wolfteeth.github.com",
            "strict_min_version": "78.0"
        }
    },
    "name": "Latte Unread Count",
    "description": "Displays numbers of unread messages in all inboxes",
    "version": "@VERSION@",
    "icons": {
        "32": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "experiment_apis": {
        "WindowListener": {
            "schema": "api/WindowListener/schema.json",
            "parent": {
                "scopes": [
                    "addon_parent"
                ],
                "paths": [
                    [
                        "WindowListener"
                    ]
                ],
                "script": "api/WindowListener/implementation.js"
            }
        }
    }
}
